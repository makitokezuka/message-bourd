
<% #一覧の表示%>
<div class ="panel panel-default">
    <div class="panel-heading">
        <h4>メッセージ一覧</h4>
    </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
             <tr>
                <th class="col-sm-2">Name</th>
                <th class="col-sm-1">age</th>
                <th class="col-sm-8">Message</th>
                <th class="col-sm-1">edit</th>
             </tr>
            </thead>
            <tbody>
            <% @messages.each do |message| %>
              <tr>
                <td>
                    <%= message.name %>
                </td>
                <td>
                    <%= message.age %>
                </td>
                <td>
                    <%= message.body %>
                </td>
                <td>
                    <%= link_to "", edit_message_path(message) ,class:"btn btn-sm btn-warning glyphicon glyphicon-ok" %>
                    <%= link_to "", message , method: :delete, data: {confirm: '削除してよろしいですか？'} ,class:"btn btn-sm btn-danger glyphicon glyphicon-remove" %>
                </td>
             </tr>
            <% end %>
            </tbody>
        </table>

    </div>
</div>

<% #部分テンプレートを読み込んでいる%>
<%= render 'form' %>
